algoritmo "47. resultadoregressivo"
var
   c, s:inteiro

inicio
      s <- 0
       c <- 500
      enquanto  c >=0 faça
                escreval (c, "+")
                 s <- s + c
                 c <- c -50
       fimenquanto
          escreval ("O resultado da soma é ", s)

fimalgoritmo

